  <script>
    function checkAnswer() {
      const input = document.getElementById("answer").value.trim();
      const correct = "320";
      const resultEl = document.getElementById("result");

      resultEl.style.display = "block";

      if (input === correct) {
        resultEl.innerHTML = "‚úÖ –ó–∞–≤–∞–Ω—Ç–∞–∂–µ–Ω–Ω—è –Ω–∞—Å—Ç—É–ø–Ω–æ–≥–æ —Ä—ñ–≤–Ω—è...<br><br>üîê –ö–ª—é—á –≤—ñ–¥ –Ω–∞—Å—Ç—É–ø–Ω–æ—ó –∫–æ–º—ñ—Ä–∫–∏ —à—É–∫–∞–π—Ç–µ –Ω–∞ –Ω–∞–¥—É–≤–Ω–æ–º—É –±–∞—Ç—É—Ç—ñ.";
        resultEl.className = "correct";
      } else {
        resultEl.innerText = "‚ùå –ù–µ–ø—Ä–∞–≤–∏–ª—å–Ω–æ. –°–ø—Ä–æ–±—É–π—Ç–µ —â–µ —Ä–∞–∑!";
        resultEl.className = "wrong";
      }
    }
